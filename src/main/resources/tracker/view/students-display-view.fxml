<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="tracker.controller.StudentsDisplayController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f0f0f0;">

    <!-- Top Bar with Back Button -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10"/>
            </padding>
            <Button text="Logout"
                    onAction="#onLogoutButtonClick"
                    style="-fx-background-color: #0077b6;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-padding: 6 14 6 14;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <!-- Title -->
            <Label text="Students list"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0077b6;"/>

            <!-- CRUD Buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Add"
                        style="-fx-background-color: #0077b6;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-padding: 6 14 6 14;"/>

                <Button text="Update"
                        style="-fx-background-color: #00ff00;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-padding: 6 14 6 14;"/>

                <Button text="Delete"
                        style="-fx-background-color: #ff0000;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-padding: 6 14 6 14;"/>
            </HBox>


            <!-- TableView -->
            <TableView fx:id="studentTable" prefHeight="400" maxWidth="750">
                <columns>
                    <TableColumn fx:id="colFirstName" text="First Name" prefWidth="130"/>
                    <TableColumn fx:id="colLastName" text="Last Name" prefWidth="130"/>
                    <TableColumn fx:id="colBirthDate" text="Birth Date" prefWidth="150"/>
                    <TableColumn fx:id="colStudentNumber" text="Student Number" prefWidth="120"/>
                    <TableColumn fx:id="colEducationLevel" text="Education Level" prefWidth="110"/>
                    <TableColumn fx:id="colAverageGrade" text="Average Grade" prefWidth="110"/>
                </columns>
                <style>
                    -fx-control-inner-background-alt: #e9f5fb;
                </style>
            </TableView>

            <!-- Pagination -->
            <Pagination fx:id="pagination"
                        maxPageIndicatorCount="5"
                        style="-fx-padding: 10 0 0 0;"/>
        </VBox>
    </center>
</BorderPane>
