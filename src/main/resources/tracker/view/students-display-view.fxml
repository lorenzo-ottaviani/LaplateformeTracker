<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="tracker.view.StudentsDisplayController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f0f0f0;">

    <!-- Top Bar with Back Button -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="0" left="0"/>
            </padding>
            <Button text="Logout"
                    onAction="#onLogoutButtonClick"
                    style="-fx-background-color: #0077b6;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-padding: 6 14 6 14;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Title -->
            <Label text="Students list"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0077b6;"/>

            <!-- TableView -->
            <TableView fx:id="studentTable" prefHeight="400" maxWidth="750">
                <columns>
                    <TableColumn fx:id="colFirstName" text="First Name" prefWidth="100"/>
                    <TableColumn fx:id="colLastName" text="Last Name" prefWidth="100"/>
                    <TableColumn fx:id="colBirthDate" text="Date de Naissance" prefWidth="150"/>
                    <TableColumn fx:id="colStudentNumber" text="Numéro Étudiant" prefWidth="120"/>
                    <TableColumn fx:id="colEducationLevel" text="Niveau" prefWidth="100"/>
                    <TableColumn fx:id="colAverageGrade" text="Moyenne" prefWidth="80"/>
                </columns>
                <!-- Zébrage possible via CSS -->
                <style>
                    -fx-control-inner-background-alt: #e9f5fb;
                </style>
            </TableView>

            <!-- Pagination -->
            <Pagination fx:id="pagination"
                        maxPageIndicatorCount="5"
                        style="-fx-padding: 20 0 0 0;"/>
        </VBox>
    </center>
</BorderPane>
