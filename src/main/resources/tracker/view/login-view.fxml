<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<FlowPane xmlns:fx="http://javafx.com/fxml" fx:controller="tracker.controller.LoginController"
          orientation="VERTICAL"
          alignment="CENTER"
          vgap="20"
          style="-fx-background-color: #f0f0f0;"
          prefWidth="450" prefHeight="400">

    <padding>
        <Insets top="10" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Login Title -->
    <VBox maxWidth="350" alignment="CENTER" style="-fx-padding: 0 0 40 0;">
        <Label text="LOGIN"
               style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #0077b6;"
               maxWidth="350"
               alignment="CENTER"/>
    </VBox>

    <!-- User Section -->
    <HBox spacing="20" alignment="CENTER_LEFT" maxWidth="350" prefHeight="40">
        <Label text="User" style="-fx-font-size: 14px; -fx-text-fill: #333333;" prefWidth="80"/>
        <TextField fx:id="userField" prefColumnCount="20" promptText="Enter username"
                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0077b6;
                   -fx-border-width: 1.5; -fx-padding: 6 10 6 10;"/>
    </HBox>

    <!-- Password Section -->
    <HBox spacing="20" alignment="CENTER_LEFT" maxWidth="350" prefHeight="40">
        <Label text="Password" style="-fx-font-size: 14px; -fx-text-fill: #333333;" prefWidth="80"/>
        <PasswordField fx:id="passwordField" prefColumnCount="20" promptText="Enter password"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0077b6;
                       -fx-border-width: 1.5; -fx-padding: 6 10 6 10;"/>
    </HBox>

    <!-- Buttons Section -->
    <HBox spacing="30" alignment="CENTER" maxWidth="350" style="-fx-padding: 20 0 0 0;">
        <Button text="Login"
                style="-fx-background-color: #0077b6; -fx-text-fill: white; -fx-font-weight: bold;
                -fx-background-radius: 10; -fx-padding: 10 30 10 30;"
                onAction="#onLoginButtonClick"
                maxWidth="120"/>
        <Button text="Register"
                style="-fx-background-color: transparent; -fx-text-fill: #0077b6; -fx-font-weight: bold;
                -fx-border-color: #0077b6; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10 30 10 30;"
                onAction="#onRegisterButtonClick"
                maxWidth="120"/>
    </HBox>

</FlowPane>
