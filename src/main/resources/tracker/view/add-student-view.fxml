<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="tracker.controller.AddStudentController"
            prefWidth="600" prefHeight="600"
            styleClass="root">

    <!-- Top: Title -->
    <top>
        <VBox alignment="CENTER">
            <padding>
                <Insets top="30" bottom="10"/>
            </padding>
            <VBox styleClass="title-container" alignment="CENTER">
                <Label text="Add Student" styleClass="title-label"/>
            </VBox>
        </VBox>
    </top>

    <!-- Center: Form -->
    <center>
        <HBox alignment="CENTER">
            <VBox spacing="15" alignment="CENTER_LEFT" maxWidth="450" styleClass="content-container">

                <!-- First Name -->
                <HBox styleClass="form-section" maxWidth="450">
                    <Label text="First Name" styleClass="form-label" prefWidth="140"/>
                    <TextField fx:id="firstNameField"
                               promptText="Enter first name"
                               prefWidth="250"
                               styleClass="input-field"/>
                </HBox>

                <!-- Last Name -->
                <HBox styleClass="form-section" maxWidth="450">
                    <Label text="Last Name" styleClass="form-label" prefWidth="140"/>
                    <TextField fx:id="lastNameField"
                               promptText="Enter last name"
                               prefWidth="250"
                               styleClass="input-field"/>
                </HBox>

                <!-- Birth Date -->
                <HBox styleClass="form-section" maxWidth="450">
                    <Label text="Birth Date" styleClass="form-label" prefWidth="140"/>
                    <DatePicker fx:id="birthDateField"
                                promptText="Select birth date"
                                prefWidth="250"
                                styleClass="input-field"/>
                </HBox>

                <!-- Student Number -->
                <HBox styleClass="form-section" maxWidth="450">
                    <Label text="Student Number" styleClass="form-label" prefWidth="140"/>
                    <TextField fx:id="studentNumberField"
                               promptText="Enter student number"
                               prefWidth="250"
                               styleClass="input-field"/>
                </HBox>

                <!-- Education Level -->
                <HBox styleClass="form-section" maxWidth="450">
                    <Label text="Education Level" styleClass="form-label" prefWidth="140"/>
                    <TextField fx:id="educationLevelField"
                               promptText="Enter education level"
                               prefWidth="250"
                               styleClass="input-field"/>
                </HBox>

                <!-- Average Grade -->
                <HBox styleClass="form-section" maxWidth="450">
                    <Label text="Average Grade" styleClass="form-label" prefWidth="140"/>
                    <TextField fx:id="averageGradeField"
                               promptText="Enter average grade"
                               prefWidth="250"
                               styleClass="input-field"/>
                </HBox>

                <!-- Error Label -->
                <Label fx:id="addErrorLabel" visible="false" wrapText="true" styleClass="error-label"/>

            </VBox>
        </HBox>
    </center>

    <!-- Bottom: Buttons -->
    <bottom>
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="40"/>
            </padding>
            <HBox styleClass="button-section" alignment="CENTER" spacing="20">
                <Button text="Back" styleClass="secondary-button" onAction="#onBackButtonClick"/>
                <Button text="Add Student" styleClass="primary-button" onAction="#onAddStudentButtonClick"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
